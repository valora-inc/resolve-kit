{
  "name": "@valora/resolve-kit",
  "version": "2.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "typecheck": "yarn build && yarn build:scripts",
    "lint": "eslint --ext=.tsx,.ts,.json --fix src/ scripts/",
    "format": "prettier --loglevel error --write .",
    "test": "yarn typecheck && jest --coverage && prettier --check \"./**/*.ts\" && eslint --ext=.tsx,.ts,.json src/ scripts/",
    "prepublish": "rm -rf dist && tsc",
    "release": "npx semantic-release",
    "resolve": "ts-node --files=src/global.d.ts scripts/resolve.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": "git@github.com:valora-inc/resolve-kit.git",
  "author": "Valora Inc",
  "license": "Apache-2.0",
  "prettier": "@valora/prettier-config",
  "devDependencies": {
    "@celo/contractkit": "^7.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@valora/eslint-config-typescript": "^1.1.44",
    "@valora/prettier-config": "^0.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "commit-and-tag-version": "^12.6.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@celo/base": "^7.0.3",
    "@celo/identity": "^5.1.2",
    "@celo/utils": "^7.0.0",
    "@masa-finance/masa-sdk": "^4.7.4",
    "ethers": "^5.8.0",
    "viem": "^2.24.3"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "branches": [
      "main"
    ],
    "preset": "conventionalcommits"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": ">= 9.1.0"
  }
}
