{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es7", "es2017", "es2019", "es2020"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.json",
    "types/*.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
